@model PurchaseOrderViewModel 
@{ 
    ViewData["Title"] = "Purchase Order"; 
}

<h2>Aiminyz - Purchase Order from Wazalo.com</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <table id="grid" class="table table-bordered table-hover table-sm"></table>
        </div>
    </div>
    <div class="row mt-4"></div>
    <div class="row">
        <div class="col-12">
            <form asp-controller="Orders" asp-action="PurchaseOrder" method="post">
                <div class="form-group">
                    <input asp-for="OrderId" type="hidden">
                    <label asp-for="EmailTo"></label>
                    <input asp-for="EmailTo" type="email" class="form-control form-control-sm" placeholder="mail@example.com">
                    <label asp-for="EmailCC"></label>
                    <input asp-for="EmailCC" type="email" class="form-control form-control-sm" placeholder="mail@example.com">
                </div>
                <div class="form-group">
                    <label asp-for="EmailBody">Email Body:</label>
                    <textarea asp-for="EmailBody" class="form-control" rows="12"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<br>
<br>
<h1>Step 1. Pay on Paypal</h1>
<h2>Send Money to master@aiminyz.com</h2>
<a class="btn btn-primary" href="https://www.paypal.com/myaccount/transfer/homepage/send" role="button" target="_blank">Pay on Paypal</a>
<br>
<br>
<h1>Step 2. Send Email with Purchase Order</h1>
<a class="btn btn-warning" asp-controller="Orders" asp-action="MailPurchaseOrder" asp-route-id="@ViewData["id"]">Mail Purchase Order</a>
<br>
<br>
<a class="btn btn-warning" asp-controller="Orders" asp-action="ExportPurchaseOrder" asp-route-id="@ViewData["id"]">Export Purchase Order</a> 

@section Scripts {
<script type="text/javascript">
    $(document).ready(function() {
        var grid, editManager;

        editManager = function(value, record, $cell, $displayEl, id, $grid) {
            var data = $grid.data(),
                $edit = $('<button class="btn btn-light btn-sm"><i class="fas fa-pencil-alt"></i></button>').attr('data-key', id),
                $delete = $('<button class="btn btn-light btn-sm"><i class="fas fa-trash-alt"></i></button>').attr('data-key', id),
                $update = $('<button class="btn btn-success btn-sm"><i class="fas fa-check"></i></button>').attr('data-key', id).hide(),
                $cancel = $('<button class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>').attr('data-key', id).hide();

            $edit.on('click', function(e) {
                $grid.edit($(this).data('key'));
                $edit.hide();
                $delete.hide();
                $update.show();
                $cancel.show();
            });

            $delete.on('click', function(e) {
                $grid.removeRow($(this).data('key'));
            });

            $update.on('click', function(e) {
                $grid.update($(this).data('key'));
                $edit.show();
                $delete.show();
                $update.hide();
                $cancel.hide();
            });

            $cancel.on('click', function(e) {
                $grid.cancel($(this).data('key'));
                $edit.show();
                $delete.show();
                $update.hide();
                $cancel.hide();
            });

            $displayEl.empty().append($edit).append($delete).append($update).append($cancel);
        }

        grid = $('#grid').grid({
            dataSource: '/Orders/Get/@Model.OrderId',
            primaryKey: 'id',
            uiLibrary: 'bootstrap4',
            fontSize: '14px',
            inlineEditing: { mode: 'command', managementColumn: false },
            detailTemplate: '<div></div>',
            responsive: true,
            resizableColumns: true,
            showHiddenColumnsAsDetails: true,
            columns: [
                { field: 'id', hidden: true, priority: 100 },
                { field: 'orderID', title: 'Order ID', sortable: true, minWidth: 80, priority: 4 },
                { field: 'sku', title: 'SKU', sortable: true, editor: true, width: 200, priority: 1 },
                { field: 'quantity', title: 'Quantity', editor: true, minWidth: 80, priority: 2 },
                { field: 'priceUSD', title: 'Price USD', editor: true, minWidth: 80, priority: 3 },
                { field: 'name', title: 'Name', sortable: true, minWidth: 120, priority: 5},
                { field: 'address1', title: 'Address 1', minWidth: 150, priority: 6 },
                { field: 'city', title: 'City', minWidth: 80, priority: 7 },
                { field: 'country', title: 'Country', minWidth: 80, priority: 10 },
                { field: 'zipCode', title: 'Zip Code', minWidth: 80, priority: 8 },
                { field: 'telephone', title: 'Telephone', minWidth: 80, priority: 9 },
                { field: 'remarks', title: 'Remarks', width: 120, editor: true, priority: 2 },
                { width: 100, align: 'center', renderer: editManager }
            ],
            pager: {
                limit: 5
            }
        });
        grid.on('rowDataChanged', function (e, id, record) {
            $.ajax({ url: '/Orders/Save/@Model.OrderId', data: { record: record }, method: 'POST' })
                .done(function () {
                    grid.reload();
                })
                .fail(function () {
                    alert('Failed to save.');
                });
        });
        grid.on('rowRemoving', function (e, $row, id, record) {            
            if (confirm('Are you sure?')) {
                $.ajax({ url: '/Orders/Delete/@Model.OrderId', data: { id: id }, method: 'POST' })
                    .done(function () {
                        grid.reload();
                    })
                    .fail(function () {
                        alert('Failed to delete.');
                    });
            }
        });        

        $("#EmailBody").editor({
            uiLibrary: 'bootstrap4',
            height: 380
        });

    });
</script>
}