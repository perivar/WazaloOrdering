{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WazaloOrdering.Client/WazaloOrdering.Client.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/WazaloOrdering.DataStoreTest/WazaloOrdering.DataStoreTest.csproj"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet version",
            "command": "dotnet",
            "args": [
                "--version"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm version",
            "command": "npm",
            "args": [
                "--version"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        ,
        {
            "label": "npm install (package.json)",
            "command": "npm",
            "args": [
                "install"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "options": {
                "cwd": "${workspaceFolder}/WazaloOrdering.Client"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release win10-x64",
            "command": "dotnet",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "--runtime",
                "win10-x64"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish release linux-x64",
            "command": "dotnet",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "--runtime",
                "linux-x64"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}